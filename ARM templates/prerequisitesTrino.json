{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourcePrefix": {
            "type": "string",
            //"defaultValue": "",
            "metadata": {
                "description": "Provide a prefix for your resource, your resources will be named as [prefix + random string]."
            }
        },

        "location": {
            //"defaultValue": "East US 2",
            "allowedValues": [
                "West US 2",
                "West US 3",
                "East US",
                "East US 2",
                "Central India",
                "UK South",
                "Korea Central",
                "West Europe",
                "East Asia"
            ],
            "type": "String",
            "metadata": {
                "description": "Location where your resources will be deployed."
            }
        }
    
    },
    "variables": {
        "msiName": "[concat(parameters('resourcePrefix'), 'MSI')]"
    },
    "functions": [],
    "resources": [
        //MSI creation
        {
            "apiVersion": "2018-11-30",
            "name": "[variables('msiName')]",
            "location": "[parameters('location')]",
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "properties": {}
            
        }
    ]
}
